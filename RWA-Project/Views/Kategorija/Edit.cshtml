@model RWA_Project.Models.ViewModels.KategorijaVM

@{
	ViewBag.Title = "Kategorija [E]";
}

<h1 class="my-big-header">Kategorija - Uređivanje</h1>
<hr />

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="w-75 m-auto">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.IDKategorija, htmlAttributes: new { @class = "" })
			@Html.EditorFor(model => model.IDKategorija, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
			@Html.ValidationMessageFor(model => model.IDKategorija, "", new { @class = "text-danger" })

		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "" })
			@Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })

		</div>
	</div>
	<div class="my-flex-center my-flex-col">

		<input type="submit" value="Uredi" class="btn btn-primary btn-sm w-50 btnConfirmDialog" />
		@Html.ActionLink("Povratak na popis", "Index")

	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
