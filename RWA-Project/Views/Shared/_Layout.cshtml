<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("RWA-Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home")</li>
					<li>@Html.ActionLink(linkText: "Racun", actionName: "Index", controllerName: "Racun")</li>
					<li>@Html.ActionLink(linkText: "Proizvod", actionName: "Index", controllerName: "Proizvod")</li>
					<li>@Html.ActionLink(linkText: "Potkategorija", actionName: "Index", controllerName: "Potkategorija")</li>
					<li>@Html.ActionLink(linkText: "Kategorija", actionName: "Index", controllerName: "Kategorija")</li>
					@*<li>@Html.ActionLink(linkText: "Kupac", actionName: "Index", controllerName: "Kupac")</li>*@
					<li>@Html.ActionLink(linkText: "Grad", actionName: "Index", controllerName: "Grad")</li>
					<li>@Html.ActionLink(linkText: "Država", actionName: "Index", controllerName: "Drzava")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - RWA - Project - AK - 2021</p>
		</footer>
		@Html.Hidden(name: "hiddenPopupMessage", value: TempData["data-popup"])
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/datatables")
	@Scripts.Render("~/bundles/custom")
	@RenderSection("scripts", required: false)
</body>
</html>
