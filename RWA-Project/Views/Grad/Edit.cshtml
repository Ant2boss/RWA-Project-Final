@model RWA_Project.Models.ViewModels.GradVM

@{
	ViewBag.Title = "Grad [E]";

	SelectList ddlList = this.ViewBag.ddlList as SelectList;
}

<h1 class="my-big-header">Grad - Uređivanje</h1>
<hr />

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="w-75 m-auto mb-3">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.IDGrad, htmlAttributes: new { @class = "" })
			@Html.EditorFor(model => model.IDGrad, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
			@Html.ValidationMessageFor(model => model.IDGrad, "", new { @class = "text-danger" })

		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "" })
			@Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DrzavaID, htmlAttributes: new { @class = "" })
			@Html.DropDownListFor(
				model => model.DrzavaID,
				selectList: ddlList,
				htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.DrzavaID, "", new { @class = "text-danger" })
			@Html.ValidationMessageFor(model => model.DrzavaID, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="my-flex-center my-flex-col">
		<input type="submit" value="Spremi" class="btn btn-primary w-50 btnConfirmDialog" />
		@Html.ActionLink("Povratak na popis", "Index")
	</div>
}

<div>
</div>
